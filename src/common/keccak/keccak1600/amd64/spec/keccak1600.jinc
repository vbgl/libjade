
require "keccakf1600.jinc"

inline fn __st0_spec() -> stack u64[25]
{
  inline int i;
  stack u64[25] state;

  for i = 0 to 25
  { state[i] = 0; }

  return state;
}


inline fn __add_full_block_spec(
  stack u64[25] state,
  reg u64 in,
  reg u64 inlen,
  reg u64 r8,
  #msf reg u64 ms
) -> stack u64[25], reg u64, reg u64, #msf reg u64
{
  reg u64 i t r64;
  reg bool b;

  r64 = r8;
  r64 >>= 3;
  i = 0;
  while { b = i < r64; } (b)
  {
    ms = #set_msf(b, ms);
    t = [in + 8 * i];
    state[(int) i] ^= t;
    i = i + 1;
  }
  ms = #set_msf(!b, ms);

  in += r8;
  inlen -= r8;

  return state, in, inlen, ms;
}


inline fn __add_final_block_spec(
  stack u64[25] state,
  reg u64 in,
  reg u64 inlen,
  reg u8 trail_byte,
  reg u64 r8,
  #msf reg u64 ms
) -> stack u64[25], #msf reg u64
{
  reg u64 i t inlen8;
  reg u8 c;
  reg bool b;

  inlen8 = inlen;
  inlen8 >>= 3;
  i = 0;
  while { b = i < inlen8; } (b)
  {
    ms = #set_msf(b, ms);
    t = [in + 8*i];
    state[(int) i] ^= t;
    i = i + 1;
  }
  ms = #set_msf(!b, ms);

  i <<= 3;
  while  { b = i < inlen; } (b)
  {
    ms = #set_msf(b, ms);
    c = (u8)[in + i];
    state[u8 (int) i] ^= c;
    i = i + 1;
  }
  ms = #set_msf(!b, ms);

  state[u8 (int) i] ^= trail_byte;

  i = r8;
  i -= 1;
  state[u8 (int) i] ^= 0x80;

  return state, ms;
}


inline fn __xtr_full_block_spec(
  stack u64[25] state,
  reg u64 out,
  reg u64 outlen,
  reg u64 rate,
  #msf reg u64 ms
) -> reg u64, reg u64, #msf reg u64
{
  reg u64 i t rate64;
  reg bool b;

  rate64 = rate;
  rate64 >>= 3;
  i = 0;
  while { b = i < rate64; } (b)
  {
    ms = #set_msf(b, ms);
    t = state[(int) i];
    [out + 8 * i] = t;
    i = i + 1;
  }
  ms = #set_msf(!b, ms);

  out += rate;
  outlen -= rate;

  return out, outlen, ms;
}


inline fn __xtr_bytes_spec(
  stack u64[25] state,
  reg u64 out,
  reg u64 outlen
)
{
  reg u64 i t outlen8;
  reg u8 c;

  outlen8 = outlen;
  outlen8 >>= 3;
  i = 0;
  while (i < outlen8 )
  {
    t = state[(int) i];
    [out + 8 * i] = t;
    i = i + 1;
  }
  i <<= 3;

  while (i < outlen)
  {
    c = state[u8 (int) i];
    (u8)[out + i] = c;
    i = i + 1;
  }
}


inline fn __keccak1600_spec(reg u64 out outlen in inlen, reg u8 trail_byte, reg u64 rate, reg u64 ms)
{
  stack u64[25] state;
  stack u64 s_out s_outlen s_in s_inlen s_rate;
  stack u8 s_trail_byte;
  reg bool b;

  s_out = out;
  s_outlen = outlen;
  s_trail_byte = trail_byte;

  state = __st0_spec();

  while { b = inlen >= rate; } (b)
  {
    ms = #set_msf(b, ms);
    state, in, inlen, ms = __add_full_block_spec(state, in, inlen, rate, ms);

    s_in = in;
    s_inlen = inlen;
    s_rate = rate;

    state = __keccakf1600_spec(state);

    inlen = s_inlen;
    inlen = #protect(inlen, ms);
    in = s_in;
    in = #protect(in, ms);
    rate = s_rate;
    rate = #protect(rate, ms);
  }
  ms = #set_msf(!b, ms);

  trail_byte = s_trail_byte;
  state, ms = __add_final_block_spec(state, in, inlen, trail_byte, rate, ms);

  outlen = s_outlen;

  while { b = outlen > rate; } (b)
  {
    ms = #set_msf(b, ms);
    s_outlen = outlen;
    s_rate = rate;

    state = __keccakf1600_spec(state);

    out = s_out;
    out = #protect(out, ms);
    outlen = s_outlen;
    rate = s_rate;

    out, outlen, ms = __xtr_full_block_spec(state, out, outlen, rate, ms);
    s_outlen = outlen;
    s_out = out;
  }
  ms = #set_msf(!b, ms);

  state = __keccakf1600_spec(state);
  out = s_out;
  out = #protect(out, ms);
  outlen = s_outlen;
  outlen = #protect(outlen, ms);

  __xtr_bytes_spec(state, out, outlen);
}
